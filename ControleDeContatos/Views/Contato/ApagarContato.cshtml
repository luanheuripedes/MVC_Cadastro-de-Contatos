@using ControleDeContatos.Models.Contato;
@model ContatoModel
@{
    ViewData["Title"] = "Confirmação apagar o contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)</h3>

    <a class="btn btn-primary btn-block m-2" role="button" asp-controller="Contato" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-danger btn-block m-2" role="button" asp-controller="Contato" asp-action="ApagarContatoConfirmacao" asp-route-id="@Model.Id">Confirmar exclusão</a>
</div>

